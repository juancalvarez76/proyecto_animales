<%- include('template/header', { tituloWeb: 'Página de Mascotas' }); %>

    <div class="container">
        <h1>CRUD con MongoDB</h1>
        <a href="mascotas/crear" class="btn btn-success">Crear Nueva Mascota</a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Código</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota => { %>
                        <tr>
                            <th scope="row"><%= mascota.id %></th>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.descripcion %></td>
                            <td>
                                <a href="mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
   
<%- include('template/footer'); %>
